.textBox {
  height: 100vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background-color: black;
  position: relative;
}
.checked {
  border: 2rpx solid #FFFFFF;
}
.text {
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
  height: 1rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  white-space: nowrap;
  position: fixed;
  top: 280%;
  color: white;
}
